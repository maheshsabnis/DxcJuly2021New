@model Core_App_Security.Controllers.UserRole
@using Microsoft.AspNetCore.Identity 
@{
    ViewData["Title"] = "Index";
    var Users = ViewBag.Users;
    var Roles = ViewBag.Roles;
}

<h1>List of Users and Roles</h1>
<form asp-action="Create">
    <div class="form-group">
        <label class="control-label">Users</label>
        <select asp-items='@new SelectList((IEnumerable<IdentityUser>)Users,"Id","UserName")' class="form-control"
                asp-for="UserName"></select>

    </div>
    <div class="form-group">
        <label class="control-label">Roles</label>
        <select asp-items='@new SelectList((IEnumerable<IdentityRole>)Roles,"Id","Name")' class="form-control" asp-for="Name"></select>
    </div>
    <input type="submit" value="Assign Role to User"/>
</form>
<br />
<div class="container">
    <strong>
          @ViewBag.Message  
    </strong>
</div>
